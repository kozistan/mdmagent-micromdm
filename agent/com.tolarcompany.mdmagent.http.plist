<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.tolarcompany.mdmagent.http</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Library/Management/MDMAgent/mdmagent_http.sh</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <key>StandardErrorPath</key>
    <string>/var/log/mdmagent.log</string>
    
    <key>StandardOutPath</key>
    <string>/var/log/mdmagent.log</string>
    
    <key>UserName</key>
    <string>root</string>
    
    <key>GroupName</key>
    <string>wheel</string>
    
    <key>ProcessType</key>
    <string>Background</string>
    
    <key>WorkingDirectory</key>
    <string>/Library/Management/MDMAgent</string>
    
    <key>ThrottleInterval</key>
    <integer>60</integer>
    
    <key>ExitTimeOut</key>
    <integer>30</integer>
</dict>
</plist>
